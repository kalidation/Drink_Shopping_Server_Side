<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout">

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/text_view_order_id"
            android:text="#1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/text_view_order_id"
            android:id="@+id/text_view_order_status"
            android:text="Order Status : Placed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/order_more_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/text_view_order_status"
            android:id="@+id/text_view_order_commentary"
            android:text="There is an Commentary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="#60000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/order_more_item"
            android:layout_alignParentEnd="true"
            android:id="@+id/text_view_order_price"
            android:text="#1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_view_order_commentary"
            android:src="@drawable/ic_add"
            android:id="@+id/show_more"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_view_order_commentary"
            android:src="@drawable/ic_keyboard_arrow_up"
            android:id="@+id/close_more"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:layout_marginTop="25dp"
            android:textSize="14sp"
            android:text="Show Details"
            android:layout_below="@+id/text_view_order_commentary"
            android:layout_toRightOf="@+id/show_more"
            android:id="@+id/text_view_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@android:color/black"
            android:layout_below="@+id/show_more"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_below="@+id/show_more"
            android:id="@+id/recyclerView_orders_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>