<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="15dp"
    android:background="@color/colorcardbackground">

    <RelativeLayout
        android:background="@drawable/special_background"
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/delet_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>

        <TextView
            android:textColor="@color/textcolor"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/delet_icon"
            android:id="@+id/delet_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:text="DELETE"/>



    </RelativeLayout>

    <LinearLayout
        android:background="@color/colorcardbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_cart_product"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/textcolor"
                android:id="@+id/txt_cart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Mil The"/>

            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:id="@+id/txt_cart_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Mil The"/>


                <TextView
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:id="@+id/txt_cart_ice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Mil The"/>

                <TextView
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:id="@+id/txt_cart_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Mil The"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/textcolor"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/txt_cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Mil The"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>